        <text>邮箱：</text>
        <input class="input" placeholder-class="phcolor" placeholder="请输入您的邮箱"/>
      </view>

      <view class="liuyan">
        <text>邮箱：</text>
        <textarea class='textares' maxlength="-1" placeholder-class="phcolor" placeholder="请输入您的邮箱"></textarea>
        
