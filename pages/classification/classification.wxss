/* pages/classification/classification.wxss */


/*-----------------------搜索框 开始----------------------------*/
.classification{
  width: 100%;

 
}
.classification .ssk{
  width: 100%;
  height: 140rpx;
  background: #efeff4;
  display: flex;
  justify-content: space-around;
}

.classification .ssk .kuang{
  width: 80%;
  height:70rpx;
  background: #fff;
  margin: auto;
  border: 1px #fff solid;
  border-radius:5px;
   display: flex;
  align-items: center;
}

.classification .ssk .kuang .input{
  width:500rpx;
  height:65rpx;
  text-align: center;
  margin: auto;
 
}

.classification .ssk .kuang .jj{
  color: #949494;
  height:70rpx;
  font-family: '微软雅黑';
  font-size: 25rpx;
  
}

.classification .ssk .kuang .aniu{
  width:50rpx;
  height: 50rpx;
  border: 1px #fff solid;
  
}
button::after{
  border: none;
}

.classification .ssk .kuang .aniu image{
  width: 100%;
}

/*-------------------------二级导航 开始--------------------------------------*/
.classification .nav {
  width:50%;
  height:70rpx;
  margin: auto;
  background: #fff;
  display: flex;
  align-content: center;
  padding: 23.4rpx 0;
}
.classification .nav navigator{
  width:50%;
  height:70rpx;

}

.classification .nav navigator .dg{
  width:100%;
  height: 70rpx;
  border: 1px solid #cccaca;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.classification .nav .dg text{
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #1a0303;
  
}

.classification .nav .dq{
  background: red;
  
}
.classification .nav .dq text{
  color: #fff;
}


/*-------------------------内容 开始--------------------------------------*/
.classification .ner{
  width: 100%;
  background: #efeff4;
  padding-bottom: 150rpx;
}

.classification .ner .fenkai{
  padding: 40rpx 0;
  width: 85%;
  margin: auto;
}

.classification .ner .fenkai navigator image{
  width: 100%;
}

.classification .ner .fenkai navigator .tittle{
  width: 100%;
  background: #fff;
  height:70rpx;
  margin-top: -3rpx;
  display: flex;
}

.classification .ner .fenkai navigator .tittle .biaoti{
  width:50%;
  font-family: "微软雅黑";
  font-size: 35rpx;
  color: #1a0303;
  line-height: 70rpx;
  margin-left: 20rpx;

  overflow: hidden; 
  display: -webkit-box;  
  word-break: break-all;  
  text-overflow: ellipsis;  
  -webkit-box-orient: vertical;  
  -webkit-line-clamp: 1;
}

.classification .ner .fenkai navigator .tittle image{
  width:9%;
  margin-top: 10rpx;
}

.classification .ner .fenkai navigator .tittle .rq{
 
  font-family: "微软雅黑";
  font-size:35rpx;
  color:red;
  line-height: 74rpx;
  text-align: center;
  font-weight:bold;
  margin-right: 30rpx;
}

.classification .ner1{

  display: none;
}















































