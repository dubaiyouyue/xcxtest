/* pages/ShoppingCart/ShoppingCart.wxss */

page {  
  display: block;  
  min-height: 100%;  
  background-color: #efeff4;  
}  


.quanxuan{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content:space-between;
  margin-top: 1rpx;
}

.quanxuan .left{
display: flex;
align-items: center;
}

.quanxuan  .left .xuankuang{
  width: 48rpx;
  height: 48rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
 
}

.quanxuan .tup{
    padding-right: 40rpx;
}

.quanxuan image{
  width: 60rpx;
  height: 60rpx;
}


/**订单详情*/


.dingdan{
  width: 100%;
  height: 260rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #cccccc;
  margin-top: 20rpx;
}

.dingdan .xuanze{
  width: 48rpx;
  height: 48rpx;
  margin-left: 40rpx;

}
.dingdan .xiangqing{
  display: flex;
  padding-right: 40rpx;
  margin-left: 20rpx;
}

.dingdan .xiangqing .tu image{
  width: 260rpx;
  margin-right: 20rpx;
  height:170rpx;

}

.dingdan .xiangqing .text{
  width: 320rpx;
  height: 170rpx;
}

.dingdan .xiangqing .text .text-one{
  line-height: 30rpx;
  height: 40rpx;
  display: flex;
  justify-content:space-between;
  font-size: 32rpx;
}

.dingdan .xiangqing .text .text-one .jiaqian{
  color: #e40000;
  font-weight: bold;
}

.dingdan .xiangqing .text .text-two{
  height: 80rpx;
  font-size: 26rpx;
  color: #999;
}

.dingdan .xiangqing .text .text-three{
  height:60rpx;
  display: flex;
  align-items:flex-start;
  justify-content: flex-end;  /*水平方向的右边*/
}

.dingdan .xiangqing .text .text-three image{
  width:48rpx;
  height: 48rpx;
}


.dingdan .xiangqing .text .text-three .input{
  width: 120rpx;
  text-align: center;
  display: flex;
  align-items: center;
  border: 1rpx solid #cccccc;
  height: 44rpx;
  min-height: 44rpx;
  margin: 0rpx 10rpx;
}



.dingdan .xiangqing .text .text-three .jiaqian{
  color: #e40000;
  font-weight: bold;
  font-size: 32rpx;
}

.dingdan .xiangqing .text .text-three .zhifu{
  width: 140rpx;
  height: 40rpx;
  background-color: #e40000;
  color: #fff;
  text-align: center;
}


/*结算*/
.jiesuan{
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom:100rpx;
}

.jiasuan .text{
width: 200rpx;
background-color: yellow;
}
 
.jiesuan .text text{
  font-family: '微软雅黑';
  font-size: 40rpx;
  padding-left: 40rpx;
}

.jiesuan .text .qian{
  color: #e40000;
}

.button button{
font-size: 40rpx;
display: flex;
justify-content: center;
align-items: center;
background: #e40000;
border-radius: 0px;
}
.pice1{
  display: none;
}
.description{
   overflow:hidden;
display:-webkit-box;
word-break:break-all;
text-overflow:ellipsis;
-webkit-box-orient:vertical;
-webkit-line-clamp:2;

}